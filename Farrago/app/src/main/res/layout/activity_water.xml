<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="339dp"
            android:layout_height="659dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="80dp"
            android:focusedMonthDateColor="#F0DC1717">

        </CalendarView>

        <ImageView
            android:layout_width="610dp"
            android:layout_height="193dp"
            android:layout_margin="20dp"
            android:onClick="onClickCard"
            android:scaleX="1.3"
            android:scaleY="1.3"
            android:src="@drawable/graph_img"
            android:translationX="-490dp"
            android:translationY="450dp" />

    </LinearLayout>


</ScrollView>